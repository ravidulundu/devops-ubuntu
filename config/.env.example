# Environment Variables for WordPress Server Automation
# Copy to .env and customize for your environment

# Database Configuration
DATABASE_HOST="localhost"
MYSQL_BIND_ADDRESS="127.0.0.1"
REDIS_BIND_ADDRESS="127.0.0.1"

# WordPress Configuration
WP_DEFAULT_ADMIN_EMAIL="admin@yourdomain.com"

# Email Configuration
DEFAULT_ADMIN_EMAIL="admin@yourdomain.com"
DEFAULT_SENDER_EMAIL="noreply@yourdomain.com"

# SSL/Security Configuration
LETSENCRYPT_EMAIL="ssl@yourdomain.com"

# Cloudflare Configuration (if using dynamic IP)
CLOUDFLARE_DOMAIN="ip.yourdomain.com"

# Performance Tuning
AUTO_TUNE_ENABLED="true"
HARDWARE_DETECTION="true"

# Monitoring Configuration
PERFORMANCE_MONITORING="true"

# Path Configuration (optional - auto-detected by default)
# Uncomment to override auto-detection:
# LOG_DIR="/var/log/wp-automation"           # Production
# BACKUP_DIR="/opt/wp-automation/backups"    # Production  
# MONITORING_DATA_DIR="/var/lib/wp-automation" # Production

# Development paths example:
# LOG_DIR="./logs"                           # Development
# BACKUP_DIR="./backups"                     # Development
# MONITORING_DATA_DIR="./data"               # Development

# Backup Configuration
BACKUP_RETENTION_DAYS="30"
AUTO_BACKUP_ENABLED="true"